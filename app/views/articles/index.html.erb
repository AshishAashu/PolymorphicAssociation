<%= link_to "Show me Events", "events"%>
<div>
    <h5> Total Articles Are: 
        <label style="color:#ba2121;">
            <strong>
            <%= @articles.count %>
            </strong>
        </label
    </h5>
</div>
<% if flash[:notice] %>
    <div class="h5" style="padding: 5px 10px; color: #d13436; border: 1px solid #d13436;
                    border-radius: 5px;">	
        <%= flash[:notice] %>
    </div>
<% end %>
<%= link_to "<button class='btn btn-danger'>Add Article</button>".html_safe,
                     newarticle_path %>
<hr style="border: 1px solid grey">
<% @articles.each do |article| %>
    <h3  style="margin-bottom: 0px;"><%= article.id %>: <%= article.content %></h3>
    <span style="color: #3c0d5b;">Posted By :-<%= article.name %></span>

    <div>
        <%= link_to "<button class='btn btn-success'>Edit Article</button>".html_safe,
                     edit_article_path(article) %>
    </div>
    <div class="container" style="margin-top: 10px;">
        <div style="border: 1px solid grey;padding: 10px;border-radius: 10px;z-index:1;
                        box-shadow: 4px 4px 12px 0 grey;margin-bottom:10px;">
        <%= form_tag "/articles/makecomment", method: "post",:class=>"form-inline" do %>
            <label class="text-primary"> Comment Here:</label>            
            <%= hidden_field_tag :article_id, article.id %>
            <div class="form-group" style="margin: 0px 10px;"> 
                <div>
                    <%= text_field_tag :name, nil,:class=>'form-control',
                                :placeholder=>"Enter Your name" ,:required=>true %>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <%= text_area_tag :comment,nil ,:class=>'form-control',:rows => 1,cols: 50,
                            :placeholder=>"Enter Your Comment" ,:required=>true %>	  	
                </div>
            </div>
            <div class="form-group" style="margin: 0px 10px;">
                <div>
                    <%= submit_tag "Comment", class: "btn btn-danger", title: "Click to Comment" %>
                </div>
            </div>
        <% end %>
        </div>
        <!--
            comment div
        -->

        <div class="container well">
            <% comments = article.comments.order(created_at: :desc) %>
            <% if comments.count == 0 %>
                <div class="panel-body">
                    <p>There is no comments on this article.</p>
                </div>

            <% else %>
                <div class="panel-heading">
                    <h5 class="text-danger">Comments on this "Article":-  </h5>
                </div>
                <% flag = 0 %>
                <% comments.each do |comment| %>
                    <% flag = flag+1 %>
                    <div class="panel-body">
                        <p style="color: #13367c;margin-bottom: 2px;"><%= flag %>: <%= comment.comment_body %></p>
                        <span style="color: #cc3914;"> ---By: <%= comment.user_name %>
                    </div>
                    <hr style="border: 0.5px solid red;">
                <% end%>
            <% end %>
        </div>
    </div>

    
    <hr style="border: 1px solid #63105d;">
<% end %>


