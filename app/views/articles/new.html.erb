<div class="container">
    <div>   
        <h3 style="color: #3c0d5b;">Add New Article :</h3>
        <hr style="border: 1px solid red;">
    </div>
    <%= form_for :article, :method => "post", :html => {:class => "form-horizontal center"} do |f| %>
        <div class="form-group row">
            <%= f.label :name, "Name:", class: "col-md-3 text-danger text-right h5 control-label" %>
            <div class="col-md-6">
            <%= f.text_field :name, class: "form-control", :placeholder=> "Enter Your Name",
                             :required=>true %>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :content, "Article Content:", class: "col-md-3 text-danger text-right
                                                                h5 control-label" %>
            <div class="col-md-6">
            <%= f.text_area :content, class: "form-control",:placeholder=> "Write an article here",
                                 required: true %>
            </div>
        </div>
        <div class="form-group row" style=" margin-left:33%;">
            <%= f.submit "Submit", class: "btn btn-default btn-primary" %> 
            <%= link_to "<button class='btn btn-danger'>Back</button>".html_safe, "/articles" %>
        </div>
    <% end %>
    </div>
</div>